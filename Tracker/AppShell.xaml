<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="JournalApp.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:JournalApp"
       xmlns:views="clr-namespace:JournalApp.Pages"
       Shell.FlyoutBehavior="Disabled"
       Title="Journal">

    <TabBar CurrentItem="{Reference dailyTracker}">

        <ShellContent Title="Calendar"
                      ContentTemplate="{DataTemplate views:CalendarPage}"
                      Route="CalendarPage" />
        <ShellContent Title="Tracker"
                      ContentTemplate="{DataTemplate views:TrackerPage}"
                      Route="TrackerPage"
                      x:Name="dailyTracker" />
        <Tab Title="Statistics">
            <ShellContent Title="Daily"
                          ContentTemplate="{DataTemplate views:DailyReportsPage}"
                          Route="DailyReportsPage" />
            <ShellContent Title="Weekly"
                          ContentTemplate="{DataTemplate views:WeeklyReportsPage}"
                          Route="WeeklyReportsPage" />
            <ShellContent Title="Monthly"
                          ContentTemplate="{DataTemplate views:MonthlyReportsPage}"
                          Route="MonthlyReportsPage" />
        </Tab>

    </TabBar>

</Shell>